{{#each formulario}}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-4">
            <div class="containero">
                <h2>{{DR}}</h2>
                <h3>{{HKC}}</h3>
                <p>{{ubica}}</p>
                <p>{{cel}}</p>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="containero">
                <h2>{{formulario}}</h2>
                <form action="#" method="get" id="contactForm">
                    <div class="form-group">
                        <label for="txtNombre">{{nm}}</label>
                        <input type="text" id="txtNombre" name="txtNombre" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="txtCorreo">{{email}}</label>
                        <input type="email" id="txtCorreo" name="txtCorreo" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="txtTelefono">{{tele}}</label>
                        <input type="text" id="txtTelefono" name="txtTelefono" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="txtBio">{{msn}}</label>
                        <textarea id="mensaje" name="txtBio" rows="4" class="form-control"></textarea>
                    </div>
                    <button type="submit" id="btnProcesar" class="btn btn-primary">{{send}}</button>
                </form>
                <div id="mensaje"></div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="map-responsive" style="margin-top: 50px;">
                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1920.924989029009!2d-86.00823676155336!3d15.652975278979747!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8f6bcbfdc7d6b4e3%3A0xb6b7483e6d9a3f15!2sRestaurante%20Hong%20Kong!5e0!3m2!1ses!2shn!4v1713214575429!5m2!1ses!2shn"
                    frameborder="0" style="border:0;" allowfullscreen></iframe>
            </div>
        </div>
    </div>
</div>
{{/each}}